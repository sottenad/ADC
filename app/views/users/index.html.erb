<h2>Users</h2>
<div class="row-fluid">
<div class="span6">

	<table class="table table-striped table-bordered user-table">
	<tr>
		<th>Email</th>
		<th colspan="3"></th>
	</tr>
	<% @users.each do |user	| %>
	  <tr>
	    <td><%= user.email %></td>
	    <td class="manage_col"><%= link_to 'Show', user %></td>
	    <td class="manage_col"><%= link_to 'Edit', edit_user_path(user) %></td>
	    <td class="manage_col"><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
	</table>
	
	<%= link_to 'New User', "/sign_up", :class=>"btn btn-primary" %>


</div>
</div>