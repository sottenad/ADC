

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row form-inline">
	<div class="span4 offset4">
	<h1>Sign Up</h1>
		<p>Or <%= link_to "log in", '/log_in' %></p>

		<div class="control-group">
		    <%= f.label :email, :class=>"control-label" %><br />
		    <%= f.text_field :email, :class=>"input-medium" %>
	    </div>
	  	<div class="control-group">
		    <%= f.label :password, :class=>"control-label" %><br />
		    <%= f.password_field :password, :class=>"input-medium" %>
	    </div>
	   	<div class="control-group">
		    <%= f.label :password_confirmation, :class=>"control-label" %><br />
		    <%= f.password_field :password_confirmation, :class=>"input-medium" %>
	    </div>
		<%= f.submit "Create an Account", :class=>"btn btn-primary btn-large" %>
	</div>
</div>
<% end %>