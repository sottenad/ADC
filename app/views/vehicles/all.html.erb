<div class="row-fluid">
<div class="span12">
	<table class="table table-striped table-bordered user-table">
	  <tr>
	    <th>Id</th>
	    <th>Make</th>
	    <th>Model</th>
	    <th>Trim</th>
	    <th>Year</th>
	    <th colspan="3"></th>
	  </tr>
	
	<% @vehicles.each do |vehicle| %>
	  <tr>
	    <td><%= vehicle.id %></td>
	    <td><%= vehicle.make %></td>
	    <td><%= vehicle.model %></td>
	    <td><%= vehicle.trim %></td>
	    <td><%= vehicle.year %></td>
	    <td  class="manage_col"><%= link_to 'Show', vehicle %></td>
	    <td class="manage_col"><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
	    <td class="manage_col"><%= link_to 'Destroy', vehicle, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
	</table>
	
	<%= paginate @vehicles %>
</div>
</div>

