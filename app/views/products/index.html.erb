<h1>Listing products</h1>

	<table class="table table-striped table-bordered user-table">

  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td class="manage_col"><%= link_to 'Show', product %></td>
    <td class="manage_col"><%= link_to 'Edit', edit_product_path(product) %></td>
    <td class="manage_col"><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
	<%= paginate @products %>

